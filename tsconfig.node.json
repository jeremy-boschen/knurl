    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "types": ["node"]
  },
  "include": [
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.ts",
    "scripts/**/*.ts"
  ]
}
